datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Product {
  id          Int                @id @default(autoincrement())
  name        String
  sku         String?
  categoryId  Int                @map("category_id")
  brandId     Int?               @map("brand_id")
  description String?
  coverImage  String?            @map("cover_image")
  imageList   Json?              @map("image_list")
  price       Float
  marketPrice Float?             @map("market_price")
  stock       Int
  unit        String?
  status      Int                @default(1)
  originPlace String?            @map("origin_place")
  specs       Json?
  tags        String?
  isRecommend Boolean            @default(false) @map("is_recommend")
  sortOrder   Int                @default(0) @map("sort_order")
  deleted     Boolean            @default(false)
  createdAt   DateTime           @default(now()) @map("created_at")
  updatedAt   DateTime           @updatedAt @map("updated_at")
  skus        ProductSku[]
  attributes  ProductAttribute[]

  @@map("product")
}

model ProductSku {
  id         Int      @id @default(autoincrement())
  productId  Int      @map("product_id")
  sku        String
  price      Float
  stock      Int
  attributes Json?
  createdAt  DateTime @default(now()) @map("created_at")
  updatedAt  DateTime @updatedAt @map("updated_at")
  product    Product  @relation(fields: [productId], references: [id])

  @@map("product_sku")
}

model AttributeDefinition {
  id          Int                @id @default(autoincrement())
  name        String
  description String?
  createdAt   DateTime           @default(now()) @map("created_at")
  attributes  ProductAttribute[]

  @@map("attribute_definition")
}

model ProductAttribute {
  id          Int                 @id @default(autoincrement())
  productId   Int                 @map("product_id")
  attributeId Int                 @map("attribute_id")
  value       String
  createdAt   DateTime            @default(now()) @map("created_at")
  product     Product             @relation(fields: [productId], references: [id])
  attribute   AttributeDefinition @relation(fields: [attributeId], references: [id])

  @@map("product_attribute")
}
